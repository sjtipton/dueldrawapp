<!DOCTYPE html>
<html xmlns:fb="http://ogp.me/ns/fb#" lang="en">
  <head>

    <%= erb(:facebook_guts, layout: false) %>

    <script type="text/javascript" src="https://raw.github.com/paperjs/paper.js/master/dist/paper.js"></script>
    <script type="text/javascript" src="https://raw.github.com/jashkenas/coffee-script/master/extras/coffee-script.js"></script>

    <!--[if IE]>
      <script type="text/javascript">
        var tags = ['header', 'section'];
        while(tags.length)
          document.createElement(tags.pop());
      </script>
    <![endif]-->
  </head>
  <body>

    <%= erb(:facebook_header, layout: false) %>

    <section id="get-started" class="draw">
      <div class="paperscript split">
        <script type="text/paperscript" canvas="canvas-1">
        // Create a new path once, when the script is executed:
        tool.minDastance = 10;
        var path;
        
        function onMouseDown(event) {
            // Create a new path and give it a stroke color:
            path = new Path();
            path.strokeColor = '#000000';

            // Add a segment to the path where you clicked:
            path.add(event.point);
        }

        function onMouseDrag(event) {
            // Every drag event, add a segment
            // to the path at the position of the mouse:
            path.add(event.point);
        }
        </script>
        <div class="canvas">
          <h1 class="noun"><%= @noun %></h1>
          <canvas height="426" width="652" style="background:#fff" id="canvas-1">
        </div>

      </div>
    </section>
  </body>
</html>